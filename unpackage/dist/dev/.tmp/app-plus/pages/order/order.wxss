page {
  background-color: #F6F6F6;
}
.nav {
  width: 100%;
  height: 12vw;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.nav .type {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    font-size: 30rpx;
    color: #999;
    height: 12vw;
    line-height: 12vw;
    text-align: center;
}
.nav .type.cur {
      color: red;
}
.loading-text {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 60rpx;
  color: #979797;
  font-size: 24rpx;
}
.unit {
  width: 92%;
  padding: 10rpx 4% 25rpx 4%;
  min-height: 50vw;
  margin-top: 15rpx;
  border-radius: 50rpx;
  background-color: #fff;
  position: relative;
}
.unit .time {
    color: #999;
    font-size: 18rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    height: 10vw;
}
.unit .main {
    width: 100%;
    height: 20vw;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.unit .main .img {
      width: 20vw;
      height: 20vw;
}
.unit .main .img image {
        width: 100%;
        height: 100%;
}
.unit .main .title {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      padding-left: 25rpx;
      font-size: 30rpx;
      font-weight: 500;
      letter-spacing: 1rpx;
      display: -webkit-box;
      overflow: hidden;
      text-overflow: ellipsis;
      word-wrap: break-word;
      white-space: normal !important;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
}
.unit .font {
    width: 100%;
    height: 10vw;
    line-height: 10vw;
    text-align: right;
    font-size: 32rpx;
    color: #666;
    border-bottom: 1px solid #eee;
    position: relative;
}
.unit .del {
    width: 25vw;
    height: 8vw;
    margin-top: 15rpx;
    color: #aaa;
    border: 1px solid #ddd;
    font-size: 34rpx;
    line-height: 8vw;
    text-align: center;
    position: absolute;
    right: 5vw;
}
.unit .del.on {
      color: #EC5045;
      border: 1px solid #EC5045;
      background-color: #FEF0EF;
}
.unit .sale {
    width: 25vw;
    height: 8vw;
    margin-top: 15rpx;
    color: #aaa;
    border: 1px solid #ddd;
    font-size: 34rpx;
    line-height: 8vw;
    text-align: center;
    position: absolute;
    right: 33vw;
}

