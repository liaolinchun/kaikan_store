page {
  background-color: #F7F7F7;
}
.goods {
  width: 92%;
  padding: 20rpx 4%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #fff;
}
.goods .img {
    width: 100rpx;
    height: 100rpx;
}
.goods .img image {
      width: 100%;
      height: 100%;
}
.goods .info {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    height: 100rpx;
    margin-left: 20rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.goods .info .title {
      display: -webkit-box;
      overflow: hidden;
      text-overflow: ellipsis;
      word-wrap: break-word;
      white-space: normal !important;
      -webkit-line-clamp: 1;
      -webkit-box-orient: vertical;
      font-size: 31rpx;
      color: #333;
      letter-spacing: 1px;
      padding-top: 8rpx;
}
.goods .info .type {
      color: #999;
      font-size: 26rpx;
      padding-bottom: 8rpx;
}
.grade {
  width: 100%;
  height: 100rpx;
  border-bottom: 1px #eee solid;
  margin-top: -20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background-color: #fff;
}
.grade .type {
    padding: 0 10rpx;
}
.grade .des {
    padding-left: 30rpx;
    font-size: 36rpx;
    font-weight: 550;
}
.grade .font {
    color: #999;
    font-size: 22rpx;
}
.grade .star {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    font-size: 28rpx;
    color: #aaa;
}
.grade .star .icon {
      font-size: 38rpx;
}
.grade .star .starIcon {
      color: #FFB910;
}
.review {
  width: 92%;
  padding: 20rpx 4% 50rpx 4%;
  background-color: #fff;
}
.review .text_box {
    width: 100%;
    font-size: 30rpx;
    height: 220rpx;
}
.review .upload {
    width: 100%;
    margin-top: 20rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
}
.review .upload .upload_img {
      width: 150rpx;
      height: 150rpx;
      border: 1px dashed #ccc;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      margin-bottom: 20rpx;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
}
.review .upload .img_box {
      width: 150rpx;
      height: 150rpx;
      margin-bottom: 20rpx;
      margin-left: 10rpx;
      background-color: #000;
      border: 1px solid #000;
      position: relative;
}
.review .upload .img_box:nth-child(2) {
        margin-left: 20rpx;
}
.review .upload .img_box image {
        width: 100%;
        height: 100%;
}
.review .upload .img_box .cu-tag {
        text-align: center;
        position: absolute;
        top: 0;
        right: 0;
        color: #fff;
        width: 30rpx;
        height: 30rpx;
        background-color: #000;
        opacity: .7;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
}
.review .upload .img_box .cu-tag .icon {
          font-size: 28rpx;
}
.submit {
  width: 100%;
  height: 120rpx;
  background-color: #EC5045;
  position: fixed;
  bottom: 0;
  line-height: 120rpx;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
}

