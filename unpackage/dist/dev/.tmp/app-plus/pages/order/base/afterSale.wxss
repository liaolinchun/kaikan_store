page {
  background-color: #F7F7F7;
}
.order_number {
  width: 94%;
  padding: 0 3%;
  height: 120rpx;
  margin-top: 5rpx;
  background-color: #EBEBEB;
  color: #999;
  font-size: 32rpx;
  line-height: 120rpx;
}
.inp_list {
  width: 100%;
  margin-top: 5vw;
}
.inp_list .type {
    width: 94%;
    padding: 0 3%;
    height: 60rpx;
    line-height: 60rpx;
    color: #666;
    font-size: 24rpx;
}
.inp_list ._select {
    width: 100%;
    border: none;
    outline: none;
    height: 90rpx;
    color: #999;
}
.inp_list input {
    width: 94%;
    padding: 0 3%;
    height: 90rpx;
    background-color: #fff;
    font-size: 36rpx;
}
.photo {
  width: 94%;
  margin: 50rpx 3% 0rpx 3%;
  height: 90rpx;
  border: 1px dashed #aaa;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.photo .icon {
    font-size: 44rpx;
    padding-left: 20rpx;
    color: #aaa;
}
.photo .icon_tit {
    padding-right: 20rpx;
    font-size: 28rpx;
    color: #aaa;
}
.btn {
  width: 92%;
  height: 80rpx;
  background-color: #fff;
  margin: 20rpx 4%;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  box-shadow: 5px 5px 10px #ddd;
  margin-bottom: 15rpx;
}
.show_img {
  width: 90%;
  margin: 20rpx 3% 30rpx 3%;
  min-height: 180rpx;
  border: 1px dashed #aaa;
  padding: 30rpx 2%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.show_img .img_box {
    width: 33%;
    background-color: #000;
    border: 1px solid #000;
    margin: 0 10rpx;
    position: relative;
}
.show_img .img_box image {
      width: 100%;
      height: 100%;
}
.show_img .img_box .cu-tag {
      text-align: center;
      position: absolute;
      top: 0;
      right: 0;
      color: #fff;
      width: 50rpx;
      height: 50rpx;
      background-color: #000;
      line-height: 50rpx;
      opacity: .7;
}

