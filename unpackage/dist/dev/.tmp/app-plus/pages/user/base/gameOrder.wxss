page {
  background-color: #F6F6F6;
}
.loading-text {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 60rpx;
  color: #979797;
  font-size: 24rpx;
}
.box {
  width: 92%;
  padding: 20rpx 4%;
  margin: 10rpx 0;
  background-color: #fff;
}
.box .time {
    font-size: 24rpx;
    color: #999;
    padding-bottom: 10rpx;
    line-height: 30rpx;
}
.box .main {
    width: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    height: 130rpx;
    overflow: hidden;
}
.box .main .left {
      width: 120rpx;
      height: 100%;
}
.box .main .left image {
        width: 100%;
        height: 100%;
}
.box .main .center {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      padding: 0 20rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
}
.box .main .center .top {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
        font-size: 24rpx;
        color: #333;
        font-weight: 600;
        display: -webkit-box;
        overflow: hidden;
        text-overflow: ellipsis;
        word-wrap: break-word;
        white-space: normal !important;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        padding-top: 5rpx;
}
.box .main .center .btn {
        padding-bottom: 5rpx;
}
.box .main .center .btn .new {
          color: red;
          font-size: 38rpx;
          font-weight: 600;
}
.box .main .center .btn .old {
          font-size: 26rpx;
          color: #999;
          padding-left: 20rpx;
          text-decoration: line-through;
}
.box .main .right {
      margin-top: 10rpx;
      width: 120rpx;
      height: 80%;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      font-size: 26rpx;
      color: #FF9900;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.box .main .right .cur {
        font-size: 36rpx;
        font-weight: 600;
}
.box .footer {
    height: 50rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.box .footer .btn {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      font-size: 26rpx;
}
.box .footer .btn .type {
        padding: 5rpx 15rpx;
        height: 35rpx;
        line-height: 35rpx;
        color: #000;
        font-size: 26rpx;
        border-radius: 50rpx;
        background: #66FFCC;
}
.box .footer .btn .cur {
        margin-left: 20rpx;
        background-color: #EC5045;
}

