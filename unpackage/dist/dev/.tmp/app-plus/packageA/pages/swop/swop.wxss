.status {
  width: 100%;
  position: fixed;
  z-index: 10;
  background-color: #EC1C1C;
  top: 0;
  height: 0;
  height: var(--status-bar-height);
}
.head {
  position: fixed;
  top: 0;
  z-index: 99;
}
.scroll_list {
  width: 94%;
  margin: 0 3%;
  padding: 8rpx 0;
  background-color: #fff;
}
.scroll_list .scroll-view_H {
    width: 100%;
}
.scroll_list .scroll-view_H .row {
      height: 50rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
}
.scroll_list .scroll-view_H .row .scroll-view-item_H {
        -webkit-flex-shrink: 0;
                flex-shrink: 0;
        height: 90%;
        line-height: 50rpx;
        -webkit-box-pack: center;
        -webkit-justify-content: center;
                justify-content: center;
        font-size: 26rpx;
        padding: 0 10rpx;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        background-color: #F2F2F2;
        margin: 0 10rpx;
}
.scroll_list .scroll-view_H .row .scroll-view-item_H:nth-child(1) {
          margin: 0;
}
.scroll_list .scroll-view_H .row .scroll-view-item_H.on {
          color: #EC1C1C;
          background-color: #FEEDED;
          font-size: 26rpx;
          border: 1px solid #EC1C1C;
}
/*筛选*/
.select {
  width: 92%;
  padding: 0 4%;
  height: 50rpx;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 26rpx;
}
.select .price_text {
    padding-left: 30rpx;
}
.select .cur {
    color: red;
}
.select .rotate {
    -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
}
.select .rotate, .select .img {
    width: 30rpx;
    height: 40rpx;
}
.select .rotate image, .select .img image {
      width: 100%;
      height: 100%;
}
.hint {
  width: 92%;
  padding: 15rpx 4%;
  height: 60rpx;
  background-color: #434343;
}
.hint .hint_text {
    width: 94%;
    height: 100%;
    padding: 0 3%;
    border: 1px solid #fff;
    border-radius: 20rpx;
    line-height: 70rpx;
    font-size: 30rpx;
    background-color: #FFCC00;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.hint .hint_text .left {
      /* 	border: 1px solid #007AFF; */
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      font-size: 26rpx;
}
.hint .hint_text .left .img {
        width: 45rpx;
        height: 45rpx;
        padding-right: 15rpx;
}
.hint .hint_text .left .img image {
          width: 100%;
          height: 100%;
}
.hint .hint_text .right {
      font-size: 26rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.hint .hint_text .right .icon {
        -webkit-transform: rotate(-180deg);
                transform: rotate(-180deg);
        font-size: 32rpx;
        padding-right: 15rpx;
}

