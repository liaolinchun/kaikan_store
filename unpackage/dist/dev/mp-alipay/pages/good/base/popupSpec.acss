.popup {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 20;
}
.popup .mask {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 21%;
    background-color: rgba(0, 0, 0, 0.6);
}
.popup .layer {
    position: fixed;
    z-index: 22;
    bottom: 0;
    width: 92%;
    padding: 0 4%;
    min-height: 70%;
    border-radius: 20rpx 20rpx 0 0;
    background-color: #fff;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
    -webkit-align-content: space-between;
            align-content: space-between;
}
.popup .layer .content {
      width: 100%;
      padding: 20rpx 0;
      position: relative;
}
.popup .layer .content .master {
        background-color: #F2F2F2;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
}
.popup .layer .content .master .left {
          width: 30%;
          height: 25vw;
}
.popup .layer .content .master .left image {
            width: 100%;
            height: 100%;
}
.popup .layer .content .master .right {
          width: 70%;
          padding-left: 30rpx;
          display: -webkit-box;
          display: -webkit-flex;
          display: flex;
          -webkit-box-orient: vertical;
          -webkit-box-direction: normal;
          -webkit-flex-flow: column;
                  flex-flow: column;
}
.popup .layer .content .master .right .new {
            font-size: 42rpx;
            font-weight: 600;
            padding-top: 20rpx;
            color: #DB2351;
}
.popup .layer .content .master .right .soldOut {
            font-size: 24rpx;
            color: #aaa;
            padding-top: 10rpx;
            padding-left: 10rpx;
}
.popup .layer .content .master .right .select {
            font-size: 28rpx;
            color: #666;
            padding-left: 8rpx;
            padding-top: 2rpx;
            padding-bottom: 5rpx;
}
.popup .layer .btn {
      width: 100%;
      height: 100rpx;
}
.popup .layer .btn .button {
        width: 100%;
        height: 80rpx;
        border-radius: 40rpx;
        color: #fff;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        -webkit-box-pack: center;
        -webkit-justify-content: center;
                justify-content: center;
        background-color: #f47952;
        font-size: 28rpx;
}
.popup.spec .title {
    font-size: 30rpx;
    margin: 30rpx 0;
}
.popup.spec .sp {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
    width: 100%;
    height: auto;
    padding: 5rpx;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.popup.spec .sp view {
      font-size: 28rpx;
      padding: 5rpx 20rpx;
      border-radius: 8rpx;
      margin: 0 20rpx 20rpx 0;
      background-color: #f6f6f6;
      color: #999;
}
.popup.spec .sp view.on {
        border: solid 1rpx #f47925;
}
.popup.spec .length {
    margin-top: 30rpx;
    border-top: solid 1rpx #eee;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    padding-top: 20rpx;
}

