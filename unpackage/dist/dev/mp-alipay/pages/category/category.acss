.category-list {
  width: 100%;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.category-list .left {
    width: 24%;
    background-color: #f2f2f2;
    position: fixed;
    left: 0;
}
.category-list .left .row {
      width: 100%;
      height: 90rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.category-list .left .row .text {
        width: 100%;
        position: relative;
        font-size: 28rpx;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -webkit-justify-content: center;
                justify-content: center;
        color: #999;
}
.category-list .left .row .text .block {
          position: absolute;
          width: 0rpx;
          left: 0;
}
.category-list .left .row.on {
        height: 100rpx;
        background-color: #fff;
}
.category-list .left .row.on .text {
          font-size: 30rpx;
          font-weight: 600;
          color: #666;
}
.category-list .left .row.on .text .block {
            width: 10rpx;
            height: 80%;
            top: 10%;
            background-color: #f06c7a;
}
.category-list .right {
    position: absolute;
    width: 76%;
    left: 24%;
}
.category-list .right .category {
      padding: 6rpx 15rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
}
.category-list .right .category .image-wrapper {
        -webkit-box-flex: 4;
        -webkit-flex: 4;
                flex: 4;
        height: 28vw;
        overflow: hidden;
}
.category-list .right .category .image-wrapper image {
          width: 100%;
          height: 100%;
}
.category-list .right .category .category-font {
        -webkit-box-flex: 6;
        -webkit-flex: 6;
                flex: 6;
        height: 28vw;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
        -webkit-flex-direction: column;
                flex-direction: column;
        overflow: hidden;
}
.category-list .right .category .category-font .fontTitle {
          width: 100%;
          font-size: 18rpx;
          line-height: 30rpx;
          height: 60rpx;
          padding-left: 10rpx;
          display: -webkit-box;
          overflow: hidden;
          text-overflow: ellipsis;
          word-wrap: break-word;
          white-space: normal !important;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
}
.category-list .right .category .category-font .price {
          width: 100%;
          height: 60rpx;
          display: -webkit-box;
          display: -webkit-flex;
          display: flex;
}
.category-list .right .category .category-font .price .old {
            -webkit-box-flex: 1;
            -webkit-flex: 1;
                    flex: 1;
            font-size: 28rpx;
            padding: 0 15rpx 0 5rpx;
            color: #999;
            line-height: 60rpx;
            text-decoration: line-through;
}
.category-list .right .category .category-font .price .new {
            -webkit-box-flex: 1;
            -webkit-flex: 1;
                    flex: 1;
            font-size: 32rpx;
            padding: 0 15rpx 0 5rpx;
            color: #FF675F;
            line-height: 60rpx;
            font-weight: 500;
            text-align: right;
}
.category-list .right .category .category-font .price .new .cur {
              font-size: 16rpx;
}
.category-list .right .category .category-font .soldOut {
          border: 1px solid #EE666C;
          width: 94%;
          height: 4.5vw;
          margin-left: 3%;
          border-radius: 15rpx;
          background-color: #FFF5F0;
          text-align: center;
          font-size: 12rpx;
          line-height: 4.5vw;
          color: #aaa;
}
.category-list .right .category .category-font .integral {
          width: 100%;
          height: 50rpx;
          background-color: #FDEB46;
          font-size: 18rpx;
          margin-top: 10rpx;
          line-height: 50rpx;
          text-align: center;
}
.category-list .right .loading-text {
      width: 100%;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
              justify-content: center;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      height: 60rpx;
      color: #979797;
      font-size: 24rpx;
}

