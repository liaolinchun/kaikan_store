page {
  background-color: #f2f2f2;
}
.container {
  height: 620rpx;
  background-color: #FFFFFF;
}
.swiper {
  height: 550rpx;
}
.dots {
  width: 100%;
  height: 50rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.dots .on {
    width: 7%;
    height: 10rpx;
    background-color: #FBE3E6;
    margin: 0 7rpx;
    border-radius: 8rpx;
}
.dots .on_off {
    background-color: #E6212A;
}
.nav_s {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  height: 550rpx;
  background-color: #fff;
  position: relative;
}
.nav_s .item_cur::after {
    display: block;
    content: "";
    width: 30rpx;
    height: 30rpx;
    border: 3px solid #FFCC00;
    content: url(data:image/png;base64,);
    border-radius: 50%;
    z-index: 999;
    position: absolute;
    background-color: #fff;
    right: 30rpx;
    bottom: 25rpx;
}
.nav_s .item {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    align-item: center;
    width: 33%;
    height: 50%;
    position: relative;
}
.nav_s .item image {
      width: 100%;
      height: 100%;
      position: absolute;
}
.nav_s .item .title {
      width: 100%;
      position: absolute;
      text-align: center;
      color: #fff;
      font-size: 28rpx;
      font-weight: 550;
      top: 90rpx;
}
.nav_s .item .jifen {
      width: 100%;
      position: absolute;
      left: 18%;
      color: #FF0016;
      font-size: 24rpx;
      top: 155rpx;
}
.nav_s .item .price {
      width: 100%;
      position: absolute;
      left: 18%;
      color: #FF0016;
      font-size: 24rpx;
      top: 195rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
}
.nav_s .item .price .old {
        font-size: 22rpx;
        color: #999;
        text-decoration: line-through;
        padding-left: 5rpx;
        padding-top: 3rpx;
}
.submit {
  width: 100%;
  height: 105rpx;
  position: fixed;
  bottom: 0;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  line-height: 105rpx;
  background-color: #E6212A;
}
.explain {
  width: 94%;
  padding: 50rpx 3%;
  color: #999;
  font-size: 24rpx;
  position: relative;
}
.explain view {
    padding-top: 5rpx;
}
.explain .prev {
    position: absolute;
    right: 5%;
    color: #fff;
    background-color: #aaa;
    padding: 3rpx 15rpx;
    border-radius: 20rpx;
    top: 95rpx;
    cursor: pointer;
}

