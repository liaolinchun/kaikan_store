.phone {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 92%;
  height: 10vw;
  line-height: 10vw;
  padding: 0rpx 4% 0rpx 4%;
  color: #666;
  font-size: 32rpx;
}
.phone.on {
    padding-top: 3vw;
}
.phone .font {
    min-width: 22%;
}
.phone input {
    width: 100%;
    font-size: 30rpx;
    line-height: 10vw;
    height: 10vw;
    color: #666;
}
.phone .btn {
    width: 38%;
    height: 7vw;
    line-height: 7vw;
    background-color: #FEF0EF;
    border: 1px solid red;
    font-size: 28rpx;
    margin-top: 1vw;
    padding: 0 10rpx;
    border-radius: 20rpx;
}
.phone .show {
    width: 38%;
    height: 7vw;
    line-height: 7vw;
    margin-top: 1vw;
    padding: 0 10rpx;
    font-size: 28rpx;
    color: red;
}
.update {
  width: 90%;
  height: 13vw;
  margin: 10vw 5%;
  border-radius: 15rpx;
  color: #FFFFFF;
  font-size: 36rpx;
  line-height: 13vw;
  text-align: center;
  background-color: #EC5045;
}

