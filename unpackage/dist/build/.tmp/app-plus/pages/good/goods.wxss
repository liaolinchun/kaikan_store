/*<!-- 轮播图-->*/
.swiper-box {
  position: relative;
  width: 100%;
  height: 90vw;
}
.swiper-box swiper {
    width: 100%;
    height: 90vw;
}
.swiper-box swiper swiper-item image {
      width: 100%;
      height: 100%;
}
.swiper-box .indicator {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    padding: 0 25rpx;
    height: 40rpx;
    border-radius: 40rpx;
    font-size: 22rpx;
    position: absolute;
    bottom: 20rpx;
    right: 20rpx;
    color: #fff;
    background-color: rgba(0, 0, 0, 0.2);
}
/*<!-- 标题 价格 -->*/
.info-box {
  width: 92%;
  padding: 10rpx 4% 20rpx 4%;
  background-color: #fff;
  margin-bottom: 15rpx;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.goods-info .price-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.goods-info .price-box .price {
    font-size: 36rpx;
    font-weight: 500;
    color: #FF3366;
    line-height: 46rpx;
}
.goods-info .price-box .cur {
    font-size: 22rpx;
    color: #FF3366;
    padding-left: 10rpx;
    padding-top: 10rpx;
}
.goods-info .price-box .old {
    font-size: 28rpx;
    margin-top: 10rpx;
    margin-left: 15rpx;
    color: #999;
    text-decoration: line-through;
}
.goods-info .price-box .soldOut {
    width: 100%;
    text-align: right;
    font-size: 22rpx;
    color: #aaa;
}
.goods-info .title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-info .integral {
  width: 100%;
  height: 10vw;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #FEFAB0;
  font-size: 18rpx;
  margin-top: 10rpx;
  line-height: 10vw;
  border-radius: 10rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.goods-info .integral .cur {
    color: #FF6665;
    padding: 0 10rpx;
}
/*<!-- 选择 -->*/
