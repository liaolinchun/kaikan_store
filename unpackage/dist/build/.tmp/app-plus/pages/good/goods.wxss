  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 0 3%;
}
.select-box .title {
    font-size: 30rpx;
    width: 15%;
}
.select-box .color {
    width: 60%;
    font-size: 26rpx;
    line-height: 28rpx;
    color: #999;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.select-box .icon {
    width: 15%;
    color: #ccc;
    font-size: 55rpx;
    position: absolute;
    right: 20rpx;
    text-align: right;
}
.select-box .soldOut {
    color: #ccc;
    font-size: 24rpx;
    position: absolute;
    right: 20rpx;
    text-align: right;
}
