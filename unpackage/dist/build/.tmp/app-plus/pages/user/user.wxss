  box-sizing: border-box;
}
.service {
  width: 60%;
  height: 30vw;
  border-radius: 20rpx;
  background-color: #FEF0EF;
  position: fixed;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  top: 50%;
  margin-top: -15vw;
  z-index: 99;
  text-align: center;
  box-sizing: border-box;
  overflow: hidden;
}
.service .box1 {
    font-size: 32rpx;
    line-height: 8vw;
    background-color: #EC5045;
    color: #FFFFFF;
    position: relative;
}
.service .box1 .off {
      position: absolute;
      right: 5rpx;
