.user-header {
  width: 92%;
  height: 18vw;
  padding: 5vw 4% 2vw 4%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #fff;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.user-header .icon {
    font-size: 46rpx;
    color: #999;
    font-weight: 600;
    -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
}
.user-header .info {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.user-header .info .img {
      width: 12vw;
      height: 12vw;
      border-radius: 50%;
      overflow: hidden;
}
.user-header .info .img image {
        width: 100%;
        height: 100%;
}
.user-header .info .name {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
      padding-left: 20rpx;
      font-size: 28rpx;
      font-weight: 600;
}
.user-header .info .name .cur {
        color: #999;
}
.total {
  width: 100%;
  height: 18vw;
  background-color: #FDF8D8;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.total .type {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    text-align: center;
    font-size: 28rpx;
    line-height: 8vw;
    color: #FF9900;
}
.total .type .cur {
      padding-top: 3vw;
      font-weight: 550;
      font-size: 45rpx;
}
.list-cell {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: baseline;
  -webkit-align-items: baseline;
          align-items: baseline;
  padding: 20rpx 5vw;
  line-height: 60rpx;
  position: relative;
  background: #fff;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.list-cell.cur {
    margin-top: 10rpx;
    border-bottom: 1px solid #eee;
}
.list-cell.cell-hover {
    background: #fafafa;
}
.list-cell.b-b:after {
    left: 30rpx;
    margin-top: 5rpx;
}
.list-cell .icon {
    font-size: 28rpx;
    color: #999;
    -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
}
.list-cell .cell-tit {
