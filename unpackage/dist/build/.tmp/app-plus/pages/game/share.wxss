.mask {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 21;
  background-color: rgba(0, 0, 0, 0.6);
}
.share {
  position: fixed;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  top: 50%;
  margin-top: -20vw;
  width: 60%;
  padding: 3vw 5%;
  height: 38vw;
  z-index: 22;
  border-radius: 50rpx;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.share .top-box {
    width: 100%;
    height: 60%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.share .top-box .left {
      width: 30%;
      height: 85%;
      margin-top: 2vw;
}
.share .top-box .left image {
        width: 100%;
        height: 100%;
}
.share .top-box .rig {
      width: 70%;
      height: 100%;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
}
.share .top-box .rig .title {
        -webkit-box-flex: 6;
        -webkit-flex: 6;
                flex: 6;
        color: #333;
        font-weight: 600;
        margin-left: 10rpx;
        overflow: hidden;
        font-size: 32rpx;
        padding-top: 5rpx;
        line-height: 47rpx;
        display: -webkit-box;
        overflow: hidden;
        text-overflow: ellipsis;
        word-wrap: break-word;
        white-space: normal !important;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
}
.share .top-box .rig .price {
        -webkit-box-flex: 4;
        -webkit-flex: 4;
                flex: 4;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: justify;
        -webkit-justify-content: space-between;
                justify-content: space-between;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        margin-left: 10rpx;
}
.share .top-box .rig .price .new {
          color: red;
          font-weight: 600;
          font-size: 48rpx;
}
.share .top-box .rig .price .old {
          color: #aaa;
          text-decoration: line-through;
          font-size: 32rpx;
}
.share .bot {
    width: 100%;
    height: 40%;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.share .bot .buy {
      width: 48%;
      height: 10vw;
      background-color: #999;
      color: #666;
      font-size: 32rpx;
      border-radius: 50rpx;
      text-align: center;
      line-height: 10vw;
      font-weight: 600;
}
.share .bot .help {
      width: 48%;
      height: 10vw;
      margin-left: 4%;
      background-color: #66FFCC;
      color: #333;
      font-weight: 600;
      font-size: 32rpx;
      border-radius: 50rpx;
      text-align: center;
